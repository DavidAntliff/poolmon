#!/bin/bash

cd $(dirname $0)
. ../services/common

if ./check-kapacitor ; then
  docker run \
      --rm \
      --tty \
      --interactive \
      --name kapacitor-cli \
      --hostname kapacitor-cli \
      --network $NETWORK \
      --env "KAPACITOR_URL=http://kapacitor:9092" \
      poolmon/kapacitor \
      bash
fi
